# Build stage
FROM golang:1.23-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY cmd/ ./cmd/
COPY internal/ ./internal/

# Build the admin-web application
RUN CGO_ENABLED=0 GOOS=linux go build -o /app/admin-web ./cmd/admin-web

# Final stage
FROM alpine:3.19

RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Copy binary from builder
COPY --from=builder /app/admin-web .

# Expose port
EXPOSE 3000

# Run the application
CMD ["./admin-web"]

